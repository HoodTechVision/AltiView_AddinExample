<UserControl x:Class="WPFAddIn1.AddInUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFAddIn1"
             mc:Ignorable="d"
             Background="Beige"
             Width="250">
    <StackPanel>
        <TextBlock FontSize="14" Margin="2" TextWrapping="Wrap" Text="This button sends a message to AltiView via a named pipe. If communication is successful, a pop-up will be displayed with the response."/>
        <Button Click="clickMeButton_Click" FontSize="14" Content="Send Test Message to AltiView!"/>
    </StackPanel>
</UserControl>
